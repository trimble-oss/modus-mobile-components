<?xml version="1.0" encoding="utf-8" ?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                    xmlns:local="clr-namespace:Trimble.Modus.Components;assembly=Trimble.Modus.Components"
                    x:Class="Trimble.Modus.Components.DropDownStyles">

  <Style TargetType="local:TMDropDown" x:Key="DropDownStyle">
    <Setter Property="ButtonBackgroundColor" Value="{DynamicResource DropDownButtonBackgroundColor}"/>
    <Setter Property="CellBackgroundColor" Value="{DynamicResource DropDownCellBackgroundColor}"/>
    <Setter Property="TextColor" Value="{DynamicResource DropDownButtonTextColor}"/>
    <Setter Property="VisualStateManager.VisualStateGroups">
      <VisualStateGroupList>
        <VisualStateGroup x:Name="CommonStates">
          <VisualState x:Name="Default">
            <VisualState.Setters>
              <Setter Property="CellBackgroundColor" Value="{DynamicResource DropDownCellDefaultBackgroundColor}"/>
            </VisualState.Setters>
          </VisualState>
          <VisualState x:Name="Selected">
            <VisualState.Setters>
              <Setter Property="CellBackgroundColor" Value="{DynamicResource DropDownCellSelectedBackgroundColor}"/>
            </VisualState.Setters>
          </VisualState>
        </VisualStateGroup>
      </VisualStateGroupList>
    </Setter>
  </Style>
</ResourceDictionary>

