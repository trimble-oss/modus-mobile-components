  <Color x:Key="SecondaryFillButtonTextColor">#FFFFFF</Color>
  <Color x:Key="SecondaryFillIconTintColor">#FFFFFF</Color>

  <Color x:Key="TertiaryFillButtonBackgroundColor">#CBCDD6</Color>
  <Color x:Key="TertiaryFillButtonSelectedBackgroundColor">#B7B9C3</Color>
  <Color x:Key="TertiaryFillButtonTextColor">#252A2E</Color>
  <Color x:Key="TertiaryFillIconTintColor">#252A2E</Color>

  <Color x:Key="DangerFillButtonBackgroundColor">#DA212C</Color>
  <Color x:Key="DangerFillButtonSelectedBackgroundColor">#AB1F26</Color>
  <Color x:Key="DangerFillButtonTextColor">#FFFFFF</Color>
  <Color x:Key="DangerFillIconTintColor">#FFFFFF</Color>

  <!--Outline Button-->
  <Color x:Key="PrimaryOutlineButtonBackgroundColor">Transparent</Color>
  <Color x:Key="PrimaryOutlineButtonSelectedBackgroundColor">#DCEDF9</Color>
  <Color x:Key="PrimaryOutlineButtonTextColor">#0063A3</Color>
  <Color x:Key="PrimaryOutlineIconTintColor">#0063A3</Color>
  <Color x:Key="PrimaryOutlineButtonBorderColor">#0063A3</Color>

  <Color x:Key="SecondaryOutlineButtonBackgroundColor">Transparent</Color>
  <Color x:Key="SecondaryOutlineButtonSelectedBackgroundColor">#B7B9C3</Color>
  <Color x:Key="SecondaryOutlineButtonTextColor">#353A40</Color>
  <Color x:Key="SecondaryOutlineIconTintColor">#353A40</Color>
  <Color x:Key="SecondaryOutlineButtonBorderColor">#353A40</Color>

  <!--Borderless Button-->
  <Color x:Key="BorderlessButtonBackgroundColor">Transparent</Color>
  <Color x:Key="BorderlessButtonSelectedBackgroundColor">#DCEDF9</Color>
  <Color x:Key="BorderlessButtonTextColor">#0063A3</Color>
  <Color x:Key="BorderlessIconTintColor">#0063A3</Color>
  <Color x:Key="BorderlessButtonBorderColor">Transparent</Color>
  <Color x:Key="BorderlessButtonSelectedBorderColor">#0063A3</Color>

  <!--Badge-->
  <Color x:Key="BadgePrimaryBackgroundColor">#0063a3</Color>
  <Color x:Key="BadgeErrorBackgroundColor">#da212c</Color>
  <Color x:Key="BadgeWarningBackgroundColor">#fbad26</Color>
  <Color x:Key="BadgeSuccessBackgroundColor">#1E8A44</Color>
  <Color x:Key="BadgeTertiaryBackgroundColor">#cbcdd6</Color>
  <Color x:Key="BadgeSecondaryBackgroundColor">#585c65</Color>
  <Color x:Key="BadgeAlternateTextColor">#353a40</Color>
  <Color x:Key="BadgeTextColor">#FFFFFF</Color>

  <!--Datagrid-->
  <Color x:Key="DataGridHeaderColor">#f1f1f6</Color>
  <Color x:Key="DataGridHeaderTextColor">#252a2e</Color>
  <Color x:Key="DataGridActiveRowColor">#dcedf9</Color>
  <Color x:Key="DataGridDefaultRowColor">#FFF</Color>
</ResourceDictionary>
