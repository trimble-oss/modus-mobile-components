<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Class="DemoApp.TMInputPage"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:Modus="clr-namespace:Trimble.Modus.Components;assembly=Trimble.Modus.Components"
             xmlns:constants="clr-namespace:DemoApp.Constant"
             Title="Input">
  <ScrollView>
    <VerticalStackLayout>

      <StackLayout Padding="10"
                   Spacing="10">

        <StackLayout Orientation="Horizontal">
          <Label Grid.Column="0"
                 Text="IsEnabled"
                 HorizontalOptions="Center"
                 VerticalOptions="Center" />
          <Switch Grid.Column="1"
                  x:Name="isEnabled"
                  IsToggled="{Binding IsEnabled}"
                  Toggled="IsEnabled_Toggled" />
          <Label Grid.Column="0"
                 Text="IsReadOnly"
                 HorizontalOptions="Center"
                 VerticalOptions="Center" />
          <Switch Grid.Column="1"
                  x:Name="isReadOnly"
                  IsToggled="{Binding IsReadOnly}"
                  Toggled="IsReadOnly_Toggled" />
        </StackLayout>

        <Modus:TMInput  x:Name="modusInput"
                           Placeholder="Input"
                           IsEnabled="{Binding IsEnabled}"
                           IsReadOnly="{Binding IsReadOnly}"/>

        <Modus:TMInput  x:Name="modusInputWithTitle"
                           TitleText="Text Input"
                           IsEnabled="{Binding IsEnabled}"
                           IsReadOnly="{Binding IsReadOnly}"
                           Placeholder="Input" />

        <Modus:TMInput x:Name="validationInput"
                          TitleText="Success/Error Input"
                          HelperText="Enter a valid email"
                          IsEnabled="{Binding IsEnabled}"
                          IsReadOnly="{Binding IsReadOnly}"
                          InputValidation="TMInputValidation"
                          Placeholder="Text Input" />

        <Modus:TMInput x:Name="filled"
                          TitleText="Filled"
                          Placeholder="Text Input"
                          IsEnabled="{Binding IsEnabled}"
                          IsReadOnly="{Binding IsReadOnly}"
                          Text="Filled" />

        <Modus:TMInput x:Name="rightIcon"
                          TitleText="Right Icon"
                          Placeholder="Text Input"
                          RightIconSource="{x:Static constants:ImageConstants.PasswordIcon}"
                          IsEnabled="{Binding IsEnabled}"
                          IsReadOnly="{Binding IsReadOnly}"
                          RightIconCommand="{Binding ShowPasswordCommand}"
                          IsPassword="{Binding ShowPassword}" />

        <Modus:TMInput x:Name="leftIcon"
                          TitleText="Left Icon"
                          LeftIconSource="{x:Static constants:ImageConstants.SearchIcon}"
                          IsEnabled="{Binding IsEnabled}"
                          IsReadOnly="{Binding IsReadOnly}"
                          Placeholder="Text Input" />

        <Modus:TMInput x:Name="bothIcon"
                          TitleText="Both Icon"
                          LeftIconSource="{x:Static constants:ImageConstants.AccountIcon}"
                          Placeholder="Text Input"
                          IsEnabled="{Binding IsEnabled}"
                          IsReadOnly="{Binding IsReadOnly}"
                          RightIconSource="{x:Static constants:ImageConstants.ContactIcon}" />
      </StackLayout>
    </VerticalStackLayout>
  </ScrollView>
</ContentPage>
